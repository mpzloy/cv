---
// Frontmatter - імпортуємо компоненти та стилі
import ResumeContent from '../components/ResumeContent.astro';
import ResumeAside from '../components/ResumeAside.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <title>Резюме - Хуторний Вадим</title>
</head>
<body class="font-ubuntu">

<main class="bg-gray-50">
    <section class="py-8">
        <div class="max-w-6xl mx-auto px-4">
            <!-- Header Grid з чистим Tailwind -->
            <div class="grid grid-cols-1 md:grid-cols-[200px_1fr] gap-4 md:gap-6">
                <figure class="">
                    <img src="/images/avatar.webp" alt="фото" width="600" height="827" class="max-w-full h-auto rounded-lg shadow-lg">
                </figure>
                <div class="text-center md:text-left">
                    <h1 class="text-4xl font-bold mb-2">Хуторний Вадим</h1>
                    <strong class="text-xl text-gray-700">WordPress розробник</strong>

                    <div class="mt-4 p-2 bg-gray-100 rounded">
                        <span class="font-medium">LinkedIn:</span>
                        <a target="_blank" href="https://www.linkedin.com/in/vadim-khutornoi-a51799143/"
                           class="text-blue-600 hover:text-blue-800 underline ml-2">
                            vadim-khutornoi-a51799143
                        </a>
                    </div>

                    <div class="mt-6">
                        <h2 class="text-2xl font-semibold mb-4 border-b border-gray-300 pb-2">Особисті якості:</h2>
                        <p class="mb-4 text-gray-700 leading-relaxed">
                            Відповідальний, комунікабельний, щось знаю, вмію працювати в команді.
                        </p>
                        <p class="text-gray-700">Хобі - велоспорт.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-8">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex flex-wrap items-start gap-8">
                <ResumeContent />
                <ResumeAside />
            </div>
        </div>
    </section>
</main>

<Footer />

</body>
</html>
